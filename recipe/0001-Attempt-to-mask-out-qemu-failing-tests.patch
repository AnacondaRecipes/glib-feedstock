Subject: [PATCH] Attempt to mask out qemu failing tests

diff --git a/glib/tests/meson.build b/glib/tests/meson.build
index c407d36..8bc91c8 100644
--- a/glib/tests/meson.build
+++ b/glib/tests/meson.build
@@ -35,7 +35,7 @@ glib_tests = {
   },
   'guuid' : {},
   'gvariant' : {
-    'suite' : ['slow'],
+    'suite' : ['slow', 'flaky'],
   },
   'gwakeup' : {
     'source' : ['gwakeuptest.c', '../gwakeup.c'],
@@ -127,7 +127,7 @@ glib_tests = {
   'spawn-test' : {
     'extra_programs' : host_machine.system() == 'windows' ? ['spawn-test-win32-gui'] : [],
   },
-  'strfuncs' : {},
+  'strfuncs' : {'suite': ['flaky']},
   'string' : {},
   'string-macro' : {
     'source' : 'string.c',
@@ -168,12 +168,12 @@ glib_tests = {
     'suite' : ['slow'],
   },
   '642026' : {
-    'suite' : ['slow'],
+    'suite' : ['slow', 'flaky'],
   },
   '642026-ec' : {
     'source' : '642026.c',
     'c_args' : ['-DG_ERRORCHECK_MUTEXES'],
-    'suite' : ['slow'],
+    'suite' : ['slow', 'flaky'],
   },
 }
 
diff --git a/gio/tests/meson.build b/gio/tests/meson.build
index d1eae9d..399e653 100644
--- a/gio/tests/meson.build
+++ b/gio/tests/meson.build
@@ -118,6 +118,7 @@ gio_tests = {
   'socket' : {
     # FIXME: https://gitlab.gnome.org/GNOME/glib/-/issues/1392
     'can_fail' : host_system == 'darwin',
+    'suite': ['flaky'],
   },
   'socket-listener' : {},
   'socket-service' : {},
diff --git a/gobject/tests/meson.build b/gobject/tests/meson.build
index 9e80746..a6f5652 100644
--- a/gobject/tests/meson.build
+++ b/gobject/tests/meson.build
@@ -199,7 +199,7 @@ endforeach
 
 foreach test_name, extra_args : python_tests
   depends = [extra_args.get('depends', [])]
-  suite = ['gobject', 'no-valgrind']
+  suite = ['gobject', 'no-valgrind', 'flaky']
 
   if extra_args.get('can_fail', false)
     suite += 'failing'
